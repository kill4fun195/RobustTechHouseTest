%br
.add-new-post
  = link_to 'New Post', new_post_path, class: "btn btn-success"
%br
.form-group.width-150
  %label 
    Sort created at:
  %select.form-control#sort-created-at
    %option{value: "DESC", selected: params[:sort] == "DESC"} DESC
    %option{value: "ASC", selected: params[:sort] == "ASC"} ASC
%br

.row.list-posts.js-appender
  = render "list_posts", posts: @posts         
%br
.text-center.hidden
  = will_paginate @posts, renderer: BootstrapPagination::Rails
.image-loading
  = image_tag "/images/loading.gif"

